<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="debugger" xsi:type="Debugger" layout="${logger:shortName=true}::${message}"/>
    <target name="console" xsi:type="Console" />
  </targets>
  <rules>
    <logger name="Butterfly.Database.Dynamic.DynamicParam" minlevel="Trace" writeTo="debugger,console" final="true"/>
    <logger name="Butterfly.Database.Dynamic.ChildDynamicParam" minlevel="Trace" writeTo="debugger,console" final="true"/>
    <logger name="Butterfly.Channel.*" minlevel="Debug" writeTo="debugger,console" final="true"/>
    <logger name="Butterfly.Database.Dynamic.*" minlevel="Debug" writeTo="debugger,console" final="true"/>
    <logger name="*" minlevel="Info" writeTo="debugger,console" />
  </rules>
</nlog>